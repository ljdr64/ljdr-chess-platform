{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "allowJs": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,

        /* Paths */
        "baseUrl": ".",
        "paths": {
            "@ChessPlatform/*": ["src/*"],
            "@Chess/*": ["src/chessboard/Chess/*"],
            "@Platform/*": ["src/chessboard/Platform/*"],
            "@Services/*": ["src/chessboard/Services/*"],
            "@Utils/*": ["src/chessboard/Utils/*"],
            "@Global/*": ["src/chessboard/Global/*"]
        },
        "jsx": "react-jsx"
    },
    "include": ["src", "tests"]
}
